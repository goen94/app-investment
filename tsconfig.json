{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": false,
    "noImplicitAny": false,
    "types": ["vite/client", "vue3-toastify/global"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
    ]
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "cypress/**/*.ts",
  ],
  "exclude": [
      "node_modules"
  ]
}
  